<div class="nested-fields employer-details">
  <div class="form-group col-sm-12 text-right">
    <%= link_to_remove_association "Remove", f, class: 'btn btn-danger btn-xs' %>
  </div>
  <%= f.association :company, label: 'Employer Name', input_html: { class: 'cv_company' }, label_html: { class: 'text-right' } %>
  <%= f.association :job_title, label: 'Job Title', label_html: { class: 'text-right' } %>
  <%= f.input :start_date, as: :date, start_year: Date.today.year - 50,
      end_year: Date.today.year, label_html: { class: 'text-right col-sm-3' } %>
  <%= f.input :end_date, as: :date, start_year: Date.today.year - 50,
      end_year: Date.today.year, label_html: { class: 'text-right col-sm-3' } %>
  <%= f.input :present_job, inline_label: 'Still Working here?' %>
  <%= f.input :responsibilities, label: 'Responsibilities', input_html: { class: 'keyresarea'} %>
  <%= f.input :achievement, label: 'Achievements', input_html: { class: 'achievements'} %>

  <hr />
  <script>
    $(".achievements:last,.keyresarea:last").wysihtml5({ toolbar: {
      'font-styles': false,
      'color': false,
      'emphasis': {
        'small': false
      },
      'blockquote': false,
      'lists': true,
      'html': false,
      'link': true,
      'image': false,
      'smallmodals': false
      }
    });
  </script>
</div>

