<div class="col-md-12 col-sm-12 col-xs-12 col-lg-12 no-padding margin-bottom-30">
  <h4 class="text-center">CONTACT DETAILS</h4>
  <hr />
  <div class="row">
    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 no-padding">
      <%= simple_form_for @digital_cv.contact_detail ||= @digital_cv.build_contact_detail, url: save_contact_detail_digital_cv_path(@digital_cv), html: { method: :post, remote: true }, wrapper: :horizontal_form do |f| %>

        <%= f.error_notification %>

        <div class="col-sm-12 no-padding margin-bottom-30">
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :email %>
          <%= f.input :mobile %>
          <%= f.input :skype_username %>
          <%= f.input :linkedin_url %>
          <%= f.input :address %>
          <%= f.input :pincode %>
        </div>
        <div class="text-center">
          <%= f.button :submit, "Save and Continue", class: "btn btn-primary talent-fore-btn" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-3">
      <%#= render 'photo_partial' %>
    </div>
  </div>
</div>

