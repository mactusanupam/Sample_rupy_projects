<div class="nested-fields nested_cv_languages" >
	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-6">
			<%= f.collection_select :language_id, Language.all, :id, :title, {:prompt => 'Select Language'}, { class: 'form-control cv_languages' } %>
		</div>
		<div class="col-sm-1 skill-rating">
			<%= f.check_box :read, {},"true", "false" %>
		</div>
		<div class="col-sm-1 skill-rating">
			<%= f.check_box :write, {},"true", "false"  %>
		</div>
		<div class="col-sm-1 skill-rating">
			<%= f.check_box :speak, {},"true", "false" %>
		</div>
		<div class="col-sm-2 skill-rating text-right">
			<%= link_to_remove_association "Remove", f, class: 'btn btn-danger btn-xs' %>
		</div>
	</div>

	<script>
		$(".nested_cv_languages .cv_languages").select2({
			tags: true
		});

		$(".cv_languages").off('select2:select').on('select2:select', function(e) {
      saveNewItem($(this), 'language');
    });
	</script>
</div>
