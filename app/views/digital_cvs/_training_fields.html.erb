<div class="nested-fields">
  <div class="form-group col-sm-12 text-right">
    <%= link_to_remove_association "Remove", f, class: 'btn btn-danger btn-xs' %>
  </div>
  <%= f.input :name, label: 'Training Name', label_html: { class: 'col-sm-2 no-left-right-padding' } %>
  <%= f.input :info, label: 'Brief Details', input_html: { class: 'training-details' }, label_html: { class: 'col-sm-2 no-left-right-padding' } %>
  <%= f.input :institute, label: 'Institute Name', label_html: { class: 'col-sm-2 no-left-right-padding' } %>
  <%= f.input :duration, label: 'Duration(In Days)', label_html: { class: 'col-sm-2 no-left-right-padding' } %>

  <hr />
  <script>
    $(".training-details").wysihtml5({ toolbar: {
      'font-styles': false,
      'color': false,
      'emphasis': {
        'small': false
      },
      'blockquote': false,
      'lists': true,
      'html': false,
      'link': true,
      'image': false,
      'smallmodals': false
      }
    });
  </script>
</div>
