<div class="nested-fields">
  <hr />
  <div class="form-group col-sm-12 text-right">
    <%= link_to_remove_association "Remove", f, class: 'btn btn-danger btn-xs' %>
  </div>
  <div class="col-sm-12">
    <%= f.input :title %>
    <%= f.input :description, label: 'More Details', input_html: { class: 'project-description' } %>
    <%= f.input :guide, label: 'Guide Name' %>
  </div>
  <script>
    $(".project-description").wysihtml5({ toolbar: {
      'font-styles': false,
      'color': false,
      'emphasis': {
        'small': false
      },
      'blockquote': false,
      'lists': true,
      'html': false,
      'link': true,
      'image': false,
      'smallmodals': false
      }
    });
  </script>
</div>
