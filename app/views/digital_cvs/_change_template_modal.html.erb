<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
<script src='https://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js'></script>
<script>
  $(function(){
    $(".change-template-crousel:first").addClass("active");
  });
</script>
<style type="text/css">
  #changecvtemplatemodal img {
    width:585px;
    height: 600px;
  }
</style>

<!-- Modal -->
<div class="modal fade" id="changecvtemplatemodal" tabindex="-1" role="dialog" aria-labelledby="changecvtemplatemodalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title text-center" id="changecvtemplatemodalLabel">SELECT TEMPLATE</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <div id="template-carousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#template-carousel" data-slide-to="0" class="active"></li>
          <li data-target="#template-carousel" data-slide-to="1" class=""></li>
          <li data-target="#template-carousel" data-slide-to="2" class=""></li>
        </ol>

        <div class="carousel-inner">
          <% get_template.each do |template| %>
            <div class="item change-template-crousel">
              <% img = "digital_cv/cvtemplateimage/#{template.name}.png" %>
              <%= image_tag img, alt: "Template Blue" %>
              <div class="hidden-xs carousel-caption">
                <%= link_to "Use this template", change_cv_template_digital_cv_path(template_id: template.id), class: "btn btn-primary btn-lg change-template-button" %>
              </div>
            </div>
          <%end %>
        </div>

        <a class="left carousel-control" href="#template-carousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#template-carousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      </div>
    </div>
  </div>
</div>
