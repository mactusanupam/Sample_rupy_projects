<div class="nested-fields honawar-nested-fields">
	<div class="form-group col-sm-12 text-right">
    <%= link_to_remove_association "Remove", f, class: 'btn btn-danger btn-xs' %>
  </div>
	<div class="form-group required">
		<%= f.label :title, 'Award Title', class: 'control-label text-right col-sm-2 no-padding' %>
		<div class="col-sm-9">
			<%= f.text_field :title, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group required">
		<%= f.label :company, 'Organization Name', class: 'control-label text-right col-sm-2 no-padding' %>
		<div class="col-sm-9">
			<%= f.text_field :company, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group required">
		<%= f.label :award_date, 'Award Date', class: 'control-label text-right col-sm-2 no-padding' %>
		<div class="col-sm-9">
			<%= f.text_field :award_date, class: 'form-control date' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :awarded_by, 'Awarded By', class: 'control-label text-right col-sm-2 no-padding' %>
		<div class="col-sm-9">
			<%= f.text_field :awarded_by, class: 'form-control' %>
		</div>
	</div>
</div>
