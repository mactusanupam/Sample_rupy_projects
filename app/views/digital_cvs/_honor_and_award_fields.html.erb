<div class="nested-fields honawar-nested-fields">
	<div class="form-group col-sm-12 text-right">
    <%= link_to_remove_association "Remove", f, class: 'btn btn-danger btn-xs' %>
  </div>
  <div class="col-sm-12">
  	<%= f.input :title, label: 'Award Title' %>
	  <%= f.association :company, label: 'Organization Name' %>
	  <%= f.input :award_date, as: :date, start_year: Date.today.year - 50,
      end_year: Date.today.year, discard_day: true, order: [:month, :year], label: 'Award Date', label_html: { class: 'text-right col-sm-3' } %>
	  <%= f.input :awarded_by, label: 'Awarded By' %>
  </div>
</div>
