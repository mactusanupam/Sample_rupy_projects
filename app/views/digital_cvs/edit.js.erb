<% if all_sections.include?(params[:slug]) %>
  var href = '<%= "/digital-cvs/#{@digital_cv.id}/edit/#{params[:slug]}" %>';
  $('.resume-editor-left li.active').removeClass('active');
  $('a[href$="'+href+'"]').parent('li').addClass('active');
  $('#resume-editor-form').html('<%= escape_javascript(render partial: "digital_cvs/#{params[:slug]}_form" ) %>');
  <% if params[:slug] == 'contact_details' %>
    $('.control-label').each(function() {
      $(this).removeClass('col-sm-2');
    });
  <% elsif params[:slug] == 'honors_and_awards'|| params[:slug] == 'certifications' %>
    $('.form-group.date .form-inline').removeClass('col-sm-12 no-padding').addClass('col-sm-9');
  <% end %>
  window.history.pushState($('.digital-cv-form').html(), '', href);
<% else %>
  alertify.alert('Alert', 'Looks like you tampered the URL. Falling back to resume summary');
  var href = '<%= "/digital-cvs/#{@digital_cv.id}/edit/basic_information" %>';
  $('.resume-editor-left li.active').removeClass('active');
  $('a[href$="'+href+'"]').parent('li').addClass('active');
  $('#resume-editor-form').html('<%= escape_javascript(render partial: "digital_cvs/basic_information_form" ) %>');
<% end %>

//show/hide end date button based on checkbox selection
$(".exp-form, .academic-form").on("change", 'input[type=checkbox]', function(e){
  var endDate = $(this).parent('.form-group').prev('div');
  endDate.find('input').prop('disabled', function(i, v) { return !v; });
  endDate.toggle();
});
