<%= form_for :application_process, url: job_description_creators_path, html: { class: 'form-horizontal jd_form', method: :post }, remote: true do |form| %>
  <div class="form-group">
    <%= form.label :to_apply, 'To Apply', class: "control-label col-sm-2" %>
    <div class="col-sm-9">
      <%= form.text_area :to_apply, class: "form-control wysihtml5 " %>
    </div>
  </div>
  <div class="text-center">
    <%= form.submit "Submit", class: "btn btn-primary site_button" %>
  </div>
<% end %>

<script type="text/javascript">
  $('.jd_form .wysihtml5').wysihtml5({ toolbar: {
    'font-styles': false,
    'color': false,
    'emphasis': {
      'small': false
    },
    'blockquote': false,
    'lists': true,
    'html': false,
    'link': true,
    'image': false,
    'smallmodals': false
    }
  });
</script>
