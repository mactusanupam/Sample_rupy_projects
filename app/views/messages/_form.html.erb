<h3 class="heading1 text-center no-padding">Contact Us</h3>
<% @message = @message.try(:errors).present? ? @message : Message.new %>
<%= simple_form_for(@message, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :mobile %>
    <%= f.input :body, label: 'Message', :input_html => { :rows => 10 } %>
    <div class="form-group">
      <%= f.check_box :terms_and_condition %>
      I agree to the TalentFore
      <%= link_to "Terms and Conditions", 'javascript:void(0)' %> of use.
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: 'btn btn-primary talent-fore-btn' %>
  </div>
<% end %>
