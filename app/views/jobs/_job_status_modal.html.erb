
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">

    <h4 class="modal-title" style="color:#4B7892;">Add comment and change the status </h4>

    </div>
    <div class="modal-body ">
    <div id="comment_error" style="color:#FF4500;"></div>
      <%= form_for @job_application, url: job_application_update_jobs_path(application_id: @job_application.id), method: :post, remote: true do |f| %>

        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="form-group">
            <strong>Add comment</strong>
            <%= f.text_area :recruiter_comment, class:"form-control " %>

        </div>
        <div class="form-group">
        <strong>Status</strong>
        <%= f.select :status, [ 'Awaiting Review', 'Reviewed', 'Phone Screened', 'Interviewed', 'Offermade' ,'Rejected','Hired'], :prompt => 'Select status' %>
        </div>
        <div class="modal-footer">
          <%= f.submit 'Update Status', class: 'btn btn-primary',style:"background:#4B7892;" %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
