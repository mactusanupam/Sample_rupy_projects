<div class="blue-bar">
  <div class="job-top-search">
    <div class= "col-md-offset-3 col-sm-offset-3 col-xs-offset-3 col-xs-6 col-sm-6 col-md-6">
      <% if params[:action] == 'index' %>
        <%= form_tag(jobs_path , method: :get , class: "col-md-12 jobtitle") do %>
          <%= text_field_tag :title, params[:title] , class: "col-md-10 jobtitle" , placeholder:"Search by job title" %>
          <%= submit_tag 'Search' ,name: nil , class: "col-md-2 jobtitle"%>
        <% end %>
      <% end %>
    </div>
    <div class="col-xs-3 col-md-3 col-sm-3">
      <%= link_to 'Applied Jobs', job_application_jobs_path , class: "btn btn-link", style: 'color: white' %>
      <%= link_to 'All Jobs', jobs_path , class: "btn btn-link", style: 'color: white' %>
      <%= link_to 'Post Jobs', '/post-jobs' , class: "btn btn-primary site_button" %>
    </div>
  </div>
</div>
