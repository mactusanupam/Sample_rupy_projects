<div class="row devise-forms page-desc">
  <div class="container" style="width: 70%;">
    <h1 class="page-head">Forgot your password?</h1>
    <h4 class="margin-bottom-50">
      Enter your email address below and weâ€™ll email you a link to reset your password.
    </h4>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="col-sm-offset-2 col-sm-7 no-padding">
        <%= f.error_notification %>
      </div>

      <div class="form-group <%= f.object.errors.messages[:email].present? ? 'has-error' : '' %>">
        <div class="input-group col-sm-7 col-sm-offset-2">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-envelope"></span>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Enter Email', class: 'form-control', style: 'width: 100%;' %>
        </div>
        <% if f.object.errors.messages[:email] %>
          <span class="help-block">
            <%= f.object.errors.messages[:email].join(', ') %>
          </span>
        <% end %>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-7 no-padding">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-default btn-lg btn-block btn-round talent-fore-btn color-white' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
