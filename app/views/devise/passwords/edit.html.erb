<div class="row devise-forms page-desc">
  <div class="container" style="width: 70%;">
    <h1 class="page-head margin-bottom-50">Change your password</h1>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

      <%= f.input :reset_password_token, as: :hidden %>

      <div class="col-sm-offset-2 col-sm-7 no-padding">
        <%= f.full_error :reset_password_token %>
      </div>

      <div class="form-group <%= f.object.errors.messages[:password].present? ? 'has-error' : '' %>">
        <div class="input-group col-sm-7 col-sm-offset-1">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-lock"></span>
          </div>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Enter new password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>
        <% if f.object.errors.messages[:password] %>
          <span class="help-block">
            <%= f.object.errors.messages[:password].join(', ') %>
          </span>
        <% end %>
      </div>

      <div class="form-group <%= f.object.errors.messages[:password_confirmation].present? ? 'has-error' : '' %>">
        <div class="input-group col-sm-7 col-sm-offset-1">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-lock"></span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Re-enter new password" %>
        </div>
        <% if f.object.errors.messages[:password_confirmation] %>
          <span class="help-block">
            <%= f.object.errors.messages[:password_confirmation].join(', ') %>
          </span>
        <% end %>
      </div>

      <div class="form-inputs">
        <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change my password" %>
      </div>
    <% end %>

<%= render "devise/shared/links" %>
