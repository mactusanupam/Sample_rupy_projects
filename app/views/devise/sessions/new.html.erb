<div class="row devise-forms">
  <div class="container">
    <%= image_tag "login_manager.png", alt: 'login manager', class: 'img-circle' %>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>

      <% if alert.present? %>
        <div class="form-group">
          <div class="col-md-offset-1 col-md-10 alert alert-danger">
            <%= alert %>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="input-group col-sm-7 col-sm-offset-1">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-envelope"></span>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Enter Email', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group col-sm-7 col-sm-offset-1">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-lock"></span>
          </div>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Enter password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="col-sm-offset-1 col-sm-10 text-left">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end -%>

      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <%= f.submit "Login", class: 'btn btn-default btn-lg btn-block btn-round talent-fore-btn color-white' %>
        </div>
      </div>

      <div class="form-group">
        <div class="signin-text">
          <div class="pull-left">
            <%= link_to 'Forgot password?', new_password_path(resource_name) %>
          </div>
          <div class="pull-right">
            <%= link_to 'Create an account', new_registration_path(resource_name) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
