<h1>Footballs</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Palyer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @footballs.each do |football| %>
      <tr>
        <td><%= football.team %></td>
        <td><%= football.palyer %></td>
        <td><%= link_to 'See the view-count and Like of this Player', football %></td>
        <td><%#= link_to 'Edit', edit_football_path(football) %></td>
        <td><%#= link_to 'Destroy', football, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

