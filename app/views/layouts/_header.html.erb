<%= nav_bar fixed: :top, responsive: true do %>
  <%= link_to image_tag('talent_fore.png', width: 300, height: 75), '/', class: "navbar-brand no-padding" %>
  <%= menu_group pull: :right do %>
    <%#= menu_item "Home", root_path %>

    <%= menu_item "Resume Builder", root_path %>
    <%= menu_item "Jobs", jobs_path %>
    <%= drop_down "Community" do %>
      <%= menu_item "Blogs", "/blogs" %>
      <%= menu_item "Discussions", community_questions_path %>
    <% end %>
    <%= menu_item "Contact Us", contact_us_path %>
    <%= menu_item "Employer Zone", '/post-jobs' %>
    <% if user_signed_in? %> 
      <%= drop_down "Welcome #{current_user.first_name}" do %>
        <%= menu_item "Logout", destroy_user_session_path, method: :delete %>
      <% end %>
    <% else %>
      <%= menu_item "Login/Register", new_user_session_path %>
    <% end %>
  <% end %>
<% end %>
